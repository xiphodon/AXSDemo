<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货品"
                android:paddingRight="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorTabText_enable"/>

            <TextView
                android:id="@+id/tv_item_MaterialCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="航线"
                android:paddingRight="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorTabText_enable"/>

            <TextView
                android:id="@+id/tv_item_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货量"
                android:paddingRight="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorTabText_enable"/>

            <TextView
                android:id="@+id/tv_item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"/>

            <TextView
                android:id="@+id/tv_item_new_order_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新订单"
                android:paddingRight="8dp"
                android:gravity="right"
                android:textSize="18sp"
                android:textColor="#ff0000"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="装货时间"
                android:paddingRight="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorTabText_enable"/>

            <TextView
                android:id="@+id/tv_item_loadtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="船名"
                android:paddingRight="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorTabText_enable"/>

            <TextView
                android:id="@+id/tv_item_shipname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#888888"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        

        
    </LinearLayout>


</LinearLayout>

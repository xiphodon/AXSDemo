<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/id_tab_new_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/tabbar_llbg_selector"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_new_order_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tabbar_new_order_selector" />

        <TextView
            android:id="@+id/id_tab_new_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:text="@string/tab_new_order"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_executing"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/tabbar_llbg_selector"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_executing_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tabbar_executing_selector" />

        <TextView
            android:id="@+id/id_tab_executing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:text="@string/tab_executing"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_completed"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/tabbar_llbg_selector"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_completed_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tabbar_completed_selector" />

        <TextView
            android:id="@+id/id_tab_completed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:text="@string/tab_completed"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_settings"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/tabbar_llbg_selector"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/id_tab_settings_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tabbar_setting_selector" />

        <TextView
            android:id="@+id/id_tab_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:text="@string/tab_setting"
            android:textSize="12sp"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>